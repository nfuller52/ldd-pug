- var pageTitle = 'legion dèl diablo'

doctype html
html(lang="en")
  head
    title #{pageTitle}
    meta(charset="utf-8")
    meta(http-equiv="X-UA-Compatible" content="IE=edge")
    meta(name="viewport", content="width=device-width, initial-scale=1, shrink-to-fit=no")
    link(href="//fonts.googleapis.com/css?family=Lato:400,700|Teko:400,500,700", rel="stylesheet")
    link(href="//maxcdn.bootstrapcdn.com/bootstrap/4.0.0-alpha.6/css/bootstrap.min.css", rel="stylesheet", integrity="sha384-rwoIResjU2yc3z8GV/NPeZWAv56rSmLldC3R/AZzGRnGxQQKnKkoFVhFQhNUwEyJ", crossorigin="anonymous")
    link(href="stylesheets/ldd.css", rel="stylesheet")
  body
    nav.navbar.navbar-toggleable-md.navbar-light.bg-faded.main-navbar.fixed-top#main-navbar
      .container.nav-container
        button.navbar-toggler.navbar-toggler-right(type="button", data-toggle="collapse", data-target="#main-nav", aria-controls="main-nav", aria-expanded="false", aria-label="Toggle navigation")
          span.navbar-toggler-icon.ml-auto
        a.navbar-brand(href="#") legion dèl #[span.primary diablo]
        #main-nav.collapse.navbar-collapse
          ul.navbar-nav.ml-auto
            each value in ['News', 'Progress', 'Recruitment', 'Forum', 'Roster']
              li.nav-item
                a.nav-link(href="#" + value.toLowerCase()) #{value}
            li.nav-item.cta
              a.nav-link.cta(href="#") Apply

    section.jumbotron-fluid.hero#main-hero
      div#particles
      .container#hero-items
        h1 legion dèl #[span.highlight diablo]
        h4 lightbringer-us
        a.cta(href="#") Apply now

    section.page-module#news
      .container
        h2.title news
        .row
          .card.col-sm-6.col-md-4.col-lg-3.col-xl-3
            img.card-img-top.img-fluid(src="images/gnome.png", alt="New website!")
            .card-block
              h4.card-title New Website Launched
              time.pub-date(datetime="2017-07-05") July 5th, 2017
              p.card-text New website up and ready!
          .card.col-sm-6.col-md-4.col-lg-3.col-xl-3
            img.card-img-top.img-fluid(src="images/gnome.png", alt="New website!")
            .card-block
              h4.card-title New Website Launched
              time.pub-date(datetime="2017-07-05") July 5th, 2017
              p.card-text New website up and ready!

    section.page-module#progress
      .banner
        h2.title progress
      .container
        .row
          h3.hidden-lg-up Normal Tomb of Sargeras
          .col-md-2.hidden-md-down.progress-title.tos
            h3 Tomb of Sargeras
            h4 Normal
          .col-md-12.col-lg-9.progress-bar-container
            .progress
              .progress-bar(role="progressbar", style="width: 100%", aria-valuenow="25", aria-valuemin="0", aria-valuemax="100")
              .hidden-md-down.progress-marker(style="left: 3%")
              .hidden-md-down.progress-marker(style="left: 12.125%")
              .hidden-md-down.progress-marker(style="left: 24.25%")
              .hidden-md-down.progress-marker(style="left: 36.375%")
              .hidden-md-down.progress-marker(style="left: 48.5%")
              .hidden-md-down.progress-marker(style="left: 60.625%")
              .hidden-md-down.progress-marker(style="left: 72.75%")
              .hidden-md-down.progress-marker(style="left: 84.875%")
              .hidden-md-down.progress-marker(style="left: 97%")
          .col-lg-1.hidden-md-down.progress-counter
            .progress-count
              p #[span.count 9 ] #[span.total / 9]
        .row
          h3.hidden-lg-up Mythic Nighthold
          .col-md-2.hidden-md-down.progress-title.nh
            h3 Nighthold
            h4 Mythic
          .col-md-12.col-lg-9.progress-bar-container
            .progress
              .progress-bar.mythic(role="progressbar", style="width: 3%", aria-valuenow="25", aria-valuemin="0", aria-valuemax="100")
              .hidden-md-down.progress-marker(style="left: 3%")
              .hidden-md-down.progress-marker(style="left: 12.125%")
              .hidden-md-down.progress-marker(style="left: 24.25%")
              .hidden-md-down.progress-marker(style="left: 36.375%")
              .hidden-md-down.progress-marker(style="left: 48.5%")
              .hidden-md-down.progress-marker(style="left: 60.625%")
              .hidden-md-down.progress-marker(style="left: 72.75%")
              .hidden-md-down.progress-marker(style="left: 84.875%")
              .hidden-md-down.progress-marker(style="left: 97%")
          .col-lg-1.hidden-md-down.progress-counter
            .progress-count
              p #[span.count 1 ] #[span.total / 9]
        .row
          h3.hidden-lg-up Heroic Trial of Valor
          .col-md-2.hidden-md-down.progress-title.tov
            h3 Trial of Valor
            h4 Heroic
          .col-md-12.col-lg-9.progress-bar-container
            .progress
              .progress-bar(role="progressbar", style="width: 100%", aria-valuenow="25", aria-valuemin="0", aria-valuemax="100")
              .hidden-md-down.progress-marker(style="left: 3%")
              .hidden-md-down.progress-marker(style="left: 47%")
              .hidden-md-down.progress-marker(style="left: 97%")
          .col-lg-1.hidden-md-down.progress-counter
            .progress-count
              p #[span.count 3 ] #[span.total / 3]
        .row
          h3.hidden-lg-up Mythic Emerald Nightmare
          .col-md-2.hidden-md-down.progress-title.en
            h3 Emerald Nightmare
            h4 Mythic
          .col-md-12.col-lg-9.progress-bar-container
            .progress
              .progress-bar.mythic(role="progressbar", style="width: 31.3333333334%", aria-valuenow="25", aria-valuemin="0", aria-valuemax="100")
              .hidden-md-down.progress-marker(style="left: 3%")
              .hidden-md-down.progress-marker(style="left: 15.6666666667%")
              .hidden-md-down.progress-marker(style="left: 31.3333333334%")
              .hidden-md-down.progress-marker(style="left: 47.0000000001%")
              .hidden-md-down.progress-marker(style="left: 62.6666666668%")
              .hidden-md-down.progress-marker(style="left: 78.3333333335%")
              .hidden-md-down.progress-marker(style="left: 97%")
          .col-lg-1.hidden-md-down.progress-counter
            .progress-count
              p #[span.count 3 ] #[span.total / 8]

